{{!-- index search bar --}}
    <div class="container py-1 my-1">
        <div class="row text-center pb-0">
        </div>
         <div class="col-md-12">
                <div class="card acik-renk-form">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group ">      
                                    <input 
                                          class="form-control" 
                                          id = "bookingDate"  
                                          type = "date"
                                          name="bookingDate"
                                          placeholder = "Choose a Date" 
                                          class = "textbox-n"
                                          onfocus = "(this.type = 'date')"  
                                          value="{{bookingDate}}"style="width: 100%" 
                                    />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group ">
                                    <select 
                                      id="session" 
                                      class="form-control"
                                      name = "session"
                                      value="{{session}}">
                                        <option selected>Time</option>
                                        <option>11:00-12:00</option>
                                        <option>12:00-13:00</option>
                                        <option>13:00-14:00</option>
                                        <option>14:00-15:00</option>
                                        <option>15:00-16:00</option>
                                        <option>17:00-18:00</option>
                                        <option>18:00-19:00</option>
                                        <option>19:00-20:00</option>
                                        <option>20:00-21:00</option>
                                        <option>21:00-22:00</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group ">
                                    <select 
                                      id="facility" 
                                      class="form-control"
                                      name="facility"
                                      value="{{facility}}">
                                        <option selected>View Sports</option>
                                        <option>Fitness</option>
                                        <option>Golf</option>
                                        <option>Ruby</option>
                                        <option>Squash</option>
                                        <option>Tennis</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <p class="font-weight-light text-dark">Venue</p>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group ">
                                    <input type="text" class="form-control" value="" placeholder="Krystal Country Club">
                                </div>
                            </div>
                            <div class="col-md-3">
                                {{#if user}}
                                <a href="/bookings/add" type="submit" class="btn btn-light  pl-5 pr-5">Book Now</a>
                                {{else}}
                                <a href="/users/register" type="submit" class="btn btn-light  pl-5 pr-5">Book Now</a>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
