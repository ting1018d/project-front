{{#each bookings}}

<div class="container py-0 my-0">

<div class="container py-0 my-0">  
    <div class="row row-cols-1 row-cols-md-2">
      <div class="col mb-4">

        <div class="card">
          {{!-- auto-images --}}
          <img src="{{img_path}}" alt="" class="card-img-top img-fluid">
          {{!-- auto-images --}}
          <div class="card-body">
            <h2 class="card-title">{{facility}}</h2>
          
              {{!-- <p class="card-text">Tennis has always been one of the most popular sporting activities at the 
              <br></p>
