{{#if records}}
<div>
    <table class="table table-striped table-hover">
        <caption>List of all Notes</caption>
        <thread>
            <tr>
                <th>Title</th>
                <th>Details</th>
                <th>Author</th>
            </tr>
        </thread>
        <tbody>
            {{#each records}}
            <tr>
                <td>{{title}}</td>
                <td>{{details}}</td>
                <td>{{userInfo.name}}</td>
            </tr>
            {{/each}}
        </tbody>        
    </table>
{{else}}
    <h2>No Notes Records Listed</h2>
{{/if}}